<?xml version="1.0" encoding="utf-8" ?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
                                     http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">

    <package>org.hibernate.annotations</package>
    <entity class="br.com.alura.bytebank.domain.client.Client" access="FIELD" name="Client">
        <table name="clients"/>
        <attributes>
            <id name="cpf"/>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="email">
                <column name="email" unique="true" nullable="false"/>
            </basic>
        </attributes>
    </entity>

    <entity class="br.com.alura.bytebank.domain.account.Account" access="FIELD" name="Account">
        <table name="accounts"/>
        <attributes>
            <id name="number"/>
            <basic name="balance">
                <column name="balance"/>
            </basic>
            <many-to-one name="client" fetch="EAGER">
                <join-column name="client_id"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>